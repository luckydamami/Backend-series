<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <main>
    <h1 class="text-center">
      <%= editing ? "Edit" : "Register" %> your home on Airbnb
    </h1>
    <form
      action="/host<%= editing ? '/edit-home' : '/add-home'%>"
      method="POST"
      class="form"
    >
      <div class="form-group">
        <input
          type="text"
          name="houseName"
          placeholder="Enter Home Name"
          required
          value="<%= editing ? home.houseName : '' %>"
        />
        <input
          type="hidden"
          name="id"
          value="<%= editing ? home.id : '' %>"
          required
        />
        <input
          type="text"
          name="location"
          placeholder="Enter Location"
          value="<%= editing ? home.location : '' %>"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="number"
          name="rooms"
          placeholder="Enter No. of Rooms"
          value="<%= editing ? home.rooms : '' %>"
          required
        />
        <input
          type="number"
          name="price"
          placeholder="Enter Price"
          value="<%= editing ? home.price : '' %>"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="number"
          name="ratings"
          placeholder="Give Home Ratings"
          value="<%= editing ? home.ratings : '' %>"
        />
        <input
          type="url"
          name="photoUrl"
          placeholder="Enter Photo URL"
          value="<%= editing ? home.photoUrl : '' %>"
        />
      </div>
      <div class="form-group">
        <input
          type="submit"
          value="<%= editing ? 'Update Home' : 'Submit' %>"
          class="btn"
          style="background-color: rgb(222, 4, 4)"
        />
      </div>
    </form>
  </main>
</body>
